<script type="text/javascript">
positioning={reached:false};
        var initialScrollPosition= $(window).scrollTop(),
        elementOffset = $('#content').offset().top+$('#content').height()/3,
        distance = (elementOffset - initialScrollPosition)-$(window).height();
        if(distance<=0)
        {
            if(positioning.reached==false)
            {
                positioning.reached=true;
                doAnimation();
            }
            console.log("We have reached");
        }
        $(window).scroll(function ()
        {
            var scrollExtent=$(window).scrollTop();
            distance = (elementOffset - scrollExtent)-$(window).height();
            if(distance<=0)
            {
                if(positioning.reached==false)
                {
                    positioning.reached=true;
                    doAnimation();
                    console.log("We've reached");
                }
            }
        });


        function doAnimation()
        {
                $('#count1').each(function () {
                    $(this).prop('Counter',0).animate({
                    Counter: $(this).text()
                    }, {
                    duration: 4000,
                    easing: 'swing',
                    step: function (now) {
                        $(this).text(Math.ceil(now));
                    }
                    });
                });
                $('#count2').each(function () {
